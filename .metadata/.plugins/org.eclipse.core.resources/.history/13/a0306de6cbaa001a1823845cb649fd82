<%if(name ==null) {
	 response.sendRedirect("loginFail.jsp");	
	}else{ 
/* 	//쿠키 생성
	Cookie cookie = new Cookie("memName",name);
	cookie.setMaxAge(30*60); //초 단위, 30분
	response.addCookie(cookie);	//클라언트에게 보내기
	
